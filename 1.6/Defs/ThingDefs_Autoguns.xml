<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
   <!-- ====================== Orlock Autogun  ===================== -->
   
    <ThingDef ParentName="GW_HOI_AutogunBase">
        <defName>GW_HOI_Gun_OrlockAutogun</defName>
        <label>Orlock autogun</label>
        <description>A slugthrowing assault rifle used by the gangers of House Orlock, a prominent noble house on the hiveworld Necromunda. \n\nHouse Orlock are often nicknamed the “House of Iron”, as they control the mines that produce Necromunda’s iron, as well as the distilleries of the rare and strong Wild Snake drink. Their gangers are battle-hardened and always up for a scrap with their rivals, especially the spies of House Delaque.</description>
        <graphicData>
            <texPath>Misc/Orlock Autogun</texPath>
        </graphicData>
        <soundInteract>Interact_Rifle</soundInteract>
        <recipeMaker>
            <skillRequirements>
                <Crafting>4</Crafting>
            </skillRequirements>
        </recipeMaker>
        <statBases>
            <WorkToMake>8500</WorkToMake>
            <Mass>3.6</Mass>
            <AccuracyTouch>0.8</AccuracyTouch>
            <AccuracyShort>0.6</AccuracyShort>
            <AccuracyMedium>0.3</AccuracyMedium>
            <AccuracyLong>0.17</AccuracyLong>
            <RangedWeapon_Cooldown>1.70</RangedWeapon_Cooldown>
        </statBases>
        <costList>
            <Steel>60</Steel>
            <ComponentIndustrial>5</ComponentIndustrial>
        </costList>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>GW_HOI_Bullet_AutoGun</defaultProjectile>
                <warmupTime>1.4</warmupTime>
                <range>24</range>
                <burstShotCount>5</burstShotCount>
                <ticksBetweenBurstShots>10</ticksBetweenBurstShots>
                <soundCast>GW_AM_Gun_OrlockAutogun</soundCast>
                <soundCastTail>GunTail_Medium</soundCastTail>
                <muzzleFlashScale>9</muzzleFlashScale>
            </li>
        </verbs>
        <weaponClasses>
            <li>ShortShots</li>
            <li>RangedHeavy</li>
        </weaponClasses>
        <tools>
            <li>
                <label>stock</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
            <li>
                <label>barrel</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
        </tools>
    </ThingDef>
  
