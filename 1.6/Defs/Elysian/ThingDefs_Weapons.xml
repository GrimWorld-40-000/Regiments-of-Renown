<?xml version="1.0" encoding="utf-8" ?>
<Defs>
   <!-- ====================== Accatran MKIV ===================== -->
    <ThingDef ParentName="BaseBullet">
        <defName>GW_HOI_Bullet_Accatran</defName>
        <label>Laser</label>
        <description>a laser</description>
        <thingClass>taranchuk_lasers.LaserProjectile</thingClass>
        <drawOffscreen>true</drawOffscreen>
        <seeThroughFog>true</seeThroughFog>
        <graphicData>
            <graphicClass>Graphic_Single</graphicClass>
            <texPath>Projectiles/Las_Bolt</texPath>
            <shaderType>TransparentPostLight</shaderType>
            <drawSize>1</drawSize>
        </graphicData>
        <projectile>
            <damageDef>Burn</damageDef>
            <damageAmountBase>11</damageAmountBase>
            <armorPenetrationBase>0.17</armorPenetrationBase>
            <stoppingPower>0.3</stoppingPower>
            <speed>1000</speed>
        </projectile>
        <modExtensions>
            <li Class="taranchuk_lasers.LaserProperties">
                <damageTickRate>9</damageTickRate>
                <lifetimeTicks>8</lifetimeTicks>
                <beamWidth>1</beamWidth>
                <beamWidthDrawScale>1</beamWidthDrawScale>
                <sweepRatePerTick>0</sweepRatePerTick>
                <maxSweepAngle>0</maxSweepAngle>
                <damageThingsAcrossBeamLine>false</damageThingsAcrossBeamLine>
                <debugCells>false</debugCells>
                <textureScrollOffsetPerTick>(0, -0.1)</textureScrollOffsetPerTick>
                <lockOnTarget>false</lockOnTarget>
            </li>
        </modExtensions>
    </ThingDef>

    <ThingDef ParentName="GW_HOI_LasgunBase">
        <defName>GW_HOI_ROR_Gun_Accatranfive</defName>
        <label>Accatran MKIV</label>
        <description>A bullpup lasgun often used by the Elysian Drop Troops of the Astra Militarum. Its compact and lightweight design makes it well-suited for airborne infantry, while providing decent firepower. \n\nLasguns from the forge world of Accatran are almost all bullpups. The planet also produces a variety of other Astra Militarum weaponry, such as laspistols, shotguns, and Sentinel walkers. Accatran designs are well-regarded due to their compactness and light weight - this even extends to their Sentinels, which can be dropped onto the battlefield on grav-chutes.</description>
        <graphicData>
            <texPath>Elysian/Weapons/Accatran MKIV</texPath>
            <drawSize>1.1</drawSize>
        </graphicData>
        <statBases>
            <WorkToMake>25000</WorkToMake>
            <Mass>3.1</Mass>
            <AccuracyTouch>0.65</AccuracyTouch>
            <AccuracyShort>0.72</AccuracyShort>
            <AccuracyMedium>0.60</AccuracyMedium>
            <AccuracyLong>0.50</AccuracyLong>
            <RangedWeapon_Cooldown>0.6</RangedWeapon_Cooldown>
            <MarketValue>500</MarketValue>
        </statBases>
        <recipeMaker>
		<researchPrerequisite>GW_AM_ElysianDropTroopers</researchPrerequisite>
            <skillRequirements>
                <Crafting>10</Crafting>
            </skillRequirements>
        </recipeMaker>
        <costList>
            <Steel>80</Steel>
            <ComponentIndustrial>5</ComponentIndustrial>
        </costList>
        <weaponClasses>
            <li>ShortShots</li>
        </weaponClasses>
        <weaponTags>
            <li>SpacerGun</li>
            <li>ShortShots</li>
            <li>GW_Elysian</li>
        </weaponTags>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>GW_HOI_Bullet_Accatran</defaultProjectile>
                <warmupTime>0.8</warmupTime>
                <range>24.0</range>
                <ticksBetweenBurstShots>6</ticksBetweenBurstShots>
                <burstShotCount>1</burstShotCount>
                <soundCast>GW_AM_Gun_Accatranfive</soundCast>
                <soundCastTail>GunTail_Heavy</soundCastTail>
                <muzzleFlashScale>12</muzzleFlashScale>
            </li>
        </verbs>
        <tools>
            <li>
                <label>stock</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
                <armorPenetration>0.13</armorPenetration>
            </li>
            <li>
                <label>barrel</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
                <armorPenetration>0.13</armorPenetration>
            </li>
        </tools>
    </ThingDef>

    <!-- ====================== Accatran MK II Plasma Gun ===================== -->

    <ThingDef ParentName="BaseHumanMakeableGun">
        <defName>GW_HOI_ROR_Gun_PlasmaGun</defName>
        <label>Accatran MK II plasma gun</label>
        <description>Accatran MK II plasma gun is a high-energy weapon that fires superheated plasma bolts, capable of melting through armor and fortified positions with precision and devastating effect.</description>
        <techLevel>Spacer</techLevel>
        <graphicData>
            <texPath>Elysian/Weapons/AccatranPlasmaGun</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>1.1</drawSize>
        </graphicData>
        <soundInteract>Interact_ChargeRifle</soundInteract>
        <statBases>
            <WorkToMake>55000</WorkToMake>
            <Mass>6.3</Mass>
            <AccuracyTouch>0.60</AccuracyTouch>
            <AccuracyShort>0.75</AccuracyShort>
            <AccuracyMedium>0.65</AccuracyMedium>
            <AccuracyLong>0.45</AccuracyLong>
            <RangedWeapon_Cooldown>2.0</RangedWeapon_Cooldown>
            <MarketValue>1500</MarketValue>
        </statBases>
		<equippedStatOffsets>
            <MoveSpeed>-0.10</MoveSpeed>
        </equippedStatOffsets>
        <recipeMaker>
            <recipeUsers Inherit="False">
                <li>HP_AM_MilitarumFabricationBench</li>
            </recipeUsers>		
            <researchPrerequisite>GW_AM_ElysianDropTroopers</researchPrerequisite>
            <skillRequirements>
                <Crafting>15</Crafting>
            </skillRequirements>
        </recipeMaker>
        <costList>
            <Plasteel>35</Plasteel>
            <Steel>55</Steel>
            <ComponentSpacer>3</ComponentSpacer>
			<HP_Ceramite>20</HP_Ceramite>
        </costList>
        <weaponTags>
            <li>SpacerGun</li>
            <li>GW_AM_SpacerRanged</li>
            <li>GW_HOI_ElysianSpecialWeapons</li>
        </weaponTags>
        <tradeTags>
            <li>HPRanged</li>
            <li>GW_AM_SpacerRanged</li>
        </tradeTags>
        <weaponClasses>
            <li>RangedHeavy</li>
        </weaponClasses>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>GW_HOI_Bullet_PlasmaShot</defaultProjectile>
                <warmupTime>1.5</warmupTime>
                <range>25</range>
                <ticksBetweenBurstShots>12</ticksBetweenBurstShots>
                <forcedMissRadius>1.0</forcedMissRadius>
                <burstShotCount>1</burstShotCount>
                <soundCast>HP_AM_Plasma_Gun_Sound</soundCast>
                <soundCastTail>GunTail_Heavy</soundCastTail>
                <muzzleFlashScale>12</muzzleFlashScale>	
                <targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
            </li>
        </verbs>
        <tools>
            <li>
                <label>stock</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
                <armorPenetration>0.13</armorPenetration>
            </li>
            <li>
                <label>barrel</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
                <armorPenetration>0.13</armorPenetration>
            </li>
        </tools>
    </ThingDef>

    <ThingDef ParentName="BaseHumanMakeableGun">
        <defName>GW_HOI_ROR_Gun_MeltaGun</defName>
