<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- Elysian Helmets -->

    <ThingDef ParentName="GW_HOI_HelmetBase">
        <defName>GW_HOI_ROR_Elysian_Helmet</defName>
        <label>elysian helmet</label>
        <description>An Elysian Drop Troops helmet. It holds up pretty well against a hard knock. \n\nNone have heard of an Elysian Guardsman who wasn’t a good shot. After all, they know that resupply can be days or weeks away, so to conserve their resources, all of their soldiers must be expert marksmen to be approved for combat duty.</description>
        <techLevel>Industrial</techLevel>
        <graphicData>
            <texPath>Elysian/Apparel/Helmet/Helmet_Display</texPath>
        </graphicData>
        <costList>
            <Steel>70</Steel>
			<Plasteel>50</Plasteel>
            <ComponentIndustrial>2</ComponentIndustrial>
			<HP_Ceramite>15</HP_Ceramite>
			<Chemfuel>10</Chemfuel>
        </costList>
        <statBases>
			<WorkToMake>12000</WorkToMake>
			<MaxHitPoints>150</MaxHitPoints>
			<MarketValue>550</MarketValue>
            <Mass>1.5</Mass>
            <ArmorRating_Sharp>0.90</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.40</ArmorRating_Blunt>
            <ArmorRating_Heat>0.45</ArmorRating_Heat>
			<Insulation_Cold>9</Insulation_Cold>
			<Insulation_Heat>7</Insulation_Heat>
            <EquipDelay>1.2</EquipDelay>
        </statBases>
		<equippedStatOffsets>
			<ToxicEnvironmentResistance>0.75</ToxicEnvironmentResistance>
		</equippedStatOffsets>
        <recipeMaker>
            <researchPrerequisite>GW_AM_ElysianDropTroopers</researchPrerequisite>
        </recipeMaker>
        <apparel>
            <wornGraphicPath>Elysian/Apparel/Helmet/Helmet</wornGraphicPath>
            <tags>
                <li>40kElysian</li>
                <li>40kElysianHelmet</li>
            </tags>
        </apparel>
    </ThingDef>

