<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef ParentName="GW_HOI_BackpackBase">
		<defName>GW_HOI_ROR_Elysian_Jetpack</defName>
		<label>Elysian jetpack</label>
        <description>A modified grav-chute specifically tailored for the Elysian Drop Troops of the Astra Militarum. Normally, grav-chutes are only meant to slow a userâ€™s fall onto the battlefield, but this design has been improved to allow for a burst of ascension before descent, like a jump-pack. \n\nThe airborne insertions once favored by the Elysians are a very rare occurrence in modern times. This jetpack is something of a compromise - allowing the Elysians to jump straight into the fray and unleash hell upon the enemy, just as they did before.</description>
		<graphicData>
			<texPath>Elysian/Apparel/Backpack/Elysium_Jetpack_Display</texPath>
			<drawSize>(2,2)</drawSize>	
		</graphicData>
		<recipeMaker>
			<researchPrerequisite>GW_AM_ElysianDropTroopers</researchPrerequisite>
		</recipeMaker>
		<statBases>
			<WorkToMake>70000</WorkToMake>
			<MaxHitPoints>275</MaxHitPoints>
			<MarketValue>600</MarketValue>
			<Mass>2.5</Mass>
			<Flammability>0.2</Flammability>
			<ArmorRating_Sharp>0.25</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.10</ArmorRating_Blunt>
			<ArmorRating_Heat>0.17</ArmorRating_Heat>
			<!-- <Insulation_Cold>5</Insulation_Cold> -->
			<!-- <Insulation_Heat>5</Insulation_Heat> -->
			<EquipDelay>2</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.05</MoveSpeed>
		</equippedStatOffsets>
		<costStuffCount Inherit="False"/>
		<stuffCategories Inherit="False"/>
		<costList>
			<Steel>75</Steel>			
			<ComponentIndustrial>5</ComponentIndustrial>
			<HP_Ceramite>15</HP_Ceramite>
			<Chemfuel>30</Chemfuel>
		</costList>
		<tickerType>Normal</tickerType>				
		<verbs>
			<li>
				<verbClass>ExplosiveJump.Verb_JumpExplosive</verbClass>
				<label>jump</label>
				<commandIcon>UI/Icons/jetpck</commandIcon>
				<violent>false</violent>
				<hasStandardCommand>true</hasStandardCommand>
				<onlyManualCast>True</onlyManualCast>
				<forceNormalTimeSpeed>false</forceNormalTimeSpeed>
				<warmupTime>2</warmupTime>
				<range>10</range>
				<warmupEffecter MayRequire="ludeon.rimworld.royalty">JumpWarmupEffect</warmupEffecter>
				<requireLineOfSight>true</requireLineOfSight>
				<flightEffecterDef MayRequire="ludeon.rimworld.royalty">JumpFlightEffect</flightEffecterDef>
				<soundLanding MayRequire="ludeon.rimworld.royalty">JumpPackLand</soundLanding>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
					<canTargetPawns>false</canTargetPawns>
					<canTargetBuildings>false</canTargetBuildings>
				</targetParams>
			</li>
		</verbs>
		<comps>
			<li Class="CompProperties_ApparelReloadable">
				<maxCharges>2</maxCharges>
				<ammoDef>Chemfuel</ammoDef>
				<ammoCountPerCharge>20</ammoCountPerCharge>
				<baseReloadTicks>60</baseReloadTicks>
				<soundReload>Standard_Reload</soundReload>
				<hotKey>Misc4</hotKey>
				<chargeNoun>jump</chargeNoun>
				<displayGizmoWhileUndrafted>false</displayGizmoWhileUndrafted>
			</li>
		</comps>
		<apparel>
            <drawData>
				<dataWest>
					<offset>(0.2, 0.0, 0.0)</offset>
				</dataWest>
				<dataEast>
					<offset>(-0.2, 0.0, 0.0)</offset>
				</dataEast>
				<dataSouth>
                    <offset>(0.0, -0.1, 0.0)</offset>
				</dataSouth>
			</drawData>
			<wornGraphicPath>Elysian/Apparel/Backpack/Elysium_Jetpack</wornGraphicPath>
			<tags>
				<li>40kElysian</li>
				<li>40kElysianJetpack</li>
			</tags>
		</apparel>
		<modExtensions>
			<li Class="ExplosiveJump.PawnFlyerExtension">
				<pawnFlyerDef>GW_HOI_ROR_JumpyExplody</pawnFlyerDef>
			</li>
		</modExtensions>
	</ThingDef>

	<ThingDef ParentName="PawnFlyerBase">
		<defName>GW_HOI_ROR_JumpyExplody</defName>
		<thingClass>ExplosiveJump.PawnFlyer_ExplosiveLanding</thingClass>
		<pawnFlyer>
			<flightDurationMin>0.2</flightDurationMin>
			<flightSpeed>8</flightSpeed>
		</pawnFlyer>
		<modExtensions>
			<li Class="ExplosiveJump.PawnFlyerExtension">
				<isExplodeOnLanding>false</isExplodeOnLanding>
				<!-- <radius>10</radius> -->
				<!-- <damageDef>Bomb</damageDef> -->
				<!-- <damageAmount>10</damageAmount> -->
				<!-- <armorPen>1.0</armorPen> -->
			</li>
		</modExtensions>
	</ThingDef>
</Defs>
