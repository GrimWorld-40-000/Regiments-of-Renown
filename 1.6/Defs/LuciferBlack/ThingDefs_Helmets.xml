<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- Lucifer Black -->

    <ThingDef ParentName="GW_HOI_HelmetBase">
        <defName>GW_HOI_ROR_LuciferBlackSkull</defName>
        <label>Lucifer Black helmet (a)</label>
        <description>A black helmet, modelled after a human skull, worn by Guardsmen of the Lucifer Blacks. It is of sturdy build and can withstand considerable punishment. \n\nThe Lucifer Blacks date back even beyond the Great Crusade, being formed during the Unification Wars.</description>
        <techLevel>Industrial</techLevel>
        <graphicData>
            <texPath>LuciferBlack/Apparel/Helmet/Lucifer_Skull_south</texPath>
        </graphicData>
        <costList>
            <Steel>130</Steel>
			<Plasteel>65</Plasteel>
            <ComponentIndustrial>2</ComponentIndustrial>
			<HP_Ceramite>15</HP_Ceramite>
            <!-- <Cloth>10</Cloth> -->
        </costList>
        <statBases>
            <WorkToMake>55000</WorkToMake>
			<MaxHitPoints>450</MaxHitPoints>
			<MarketValue>1500</MarketValue>
            <Mass>1.2</Mass>
            <ArmorRating_Sharp>0.98</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.48</ArmorRating_Blunt>
            <ArmorRating_Heat>0.52</ArmorRating_Heat>
			<Insulation_Cold>35</Insulation_Cold>
			<Insulation_Heat>12</Insulation_Heat>
            <EquipDelay>1.2</EquipDelay>
        </statBases>
		<equippedStatOffsets>
			<ShootingAccuracyPawn>3</ShootingAccuracyPawn>
		</equippedStatOffsets>
        <recipeMaker>
            <researchPrerequisite>GW_LuciferBlack</researchPrerequisite>
        </recipeMaker>
        <apparel>
            <wornGraphicPath>LuciferBlack/Apparel/Helmet/Lucifer_Skull</wornGraphicPath>
            <tags>
                <li>40kLucifer</li>
                <li>40kLuciferHelmet</li>
            </tags>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups>
        </apparel>
    </ThingDef>

